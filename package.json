{
  "name": "base-template",
  "description": "Base template",
  "packageManager": "yarn@3.1.1",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/app"
  ],
  "scripts": {
    "build:dev": "ts-patch install -s && yarn workspaces foreach -t --from '{@ws/core,@ws/app}' run build",
    "start:dev": "yarn workspace @ws/app run dev",
    "build:app": "yarn build:dev && yarn workspace @ws/app run build",
    "start:app": "yarn workspace @ws/app run start",
    "lint": "yarn workspaces foreach -p run lint"
  },
  "devDependencies": {
    "@il9/eslint-config-base": "^1.0.12",
    "@rushstack/eslint-patch": "^1.1.0",
    "@types/node": "^16.0.0",
    "eslint": "^7.0.0",
    "prettier": "^2.0.0",
    "ts-patch": "^2.0.1",
    "typescript": "4.3.2",
    "typescript-transform-paths": "^3.3.1"
  }
}
